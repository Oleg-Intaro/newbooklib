{% extends '::base.html.twig' %}
{% block stylesheets %}
    <link href="{{ asset('bundles/intarobook/css/form.css') }}" rel="stylesheet" />
    {{ parent() }}
{% endblock %}

{% block body -%}
    <h1>Добавить книгу</h1>
    <div id="page">
        {{ form_start(form, {attr: {'novalidate': 'novalidate'}}) }}
            <table>
                <tr>
                    <td colspan="2">
                        {{ form_errors(form) }}
                    </td>
                </tr>

                <tr>
                    <td> {{ form_label(form.title, 'Название') }}</td>
                    <td> {{ form_widget(form.title) }}</td>
                </tr>
                <tr>
                    <td colspan="2"> {{ form_errors(form.title) }}</td>
                </tr>

                <tr>
                    <td> {{ form_label(form.author, 'Автор') }}</td>
                    <td> {{ form_widget(form.author) }}</td>
                </tr>
                <tr>
                    <td colspan="2"> {{ form_errors(form.author) }}</td>
                </tr>

                <tr>
                    <td> {{ form_label(form.file, 'Файл с книгой') }}</td>
                    <td> {{ form_widget(form.file) }}</td>
                </tr>
                <tr>
                    <td colspan="2"> {{ form_errors(form.file) }}</td>
                </tr>

                <tr>
                    <td> {{ form_label(form.coverFile, 'Обложка') }}</td>
                    <td> {{ form_widget(form.coverFile) }}</td>
                </tr>
                <tr>
                    <td colspan="2"> {{ form_errors(form.coverFile) }}</td>
                </tr>

                <tr>
                    <td> {{ form_label(form.lastRead, 'Дата прочтения') }}</td>
                    <td> {{ form_widget(form.lastRead) }}</td>
                </tr>
                <tr>
                    <td colspan="2"> {{ form_errors(form.lastRead) }}</td>
                </tr>

                <tr>
                    <td> {{ form_label(form.allowDownload, 'Разрешить скачивание') }}</td>
                    <td> {{ form_widget(form.allowDownload) }}</td>
                </tr>
                <tr>
                    <td colspan="2"> {{ form_errors(form.allowDownload) }}</td>
                </tr>
            </table>
            {{ form_row(form.submit, { 'label': 'Добавить' }) }}
        {{ form_end(form) }}
        <ul class="record_actions">
            <li>
                <a href="{{ path('book') }}">
                    К списку книг
                </a>
            </li>
        </ul>
    </div><!--#page-->
{% endblock %}
